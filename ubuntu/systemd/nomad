[Unit]
Description=Easily Deploy Applications at Any Scale
Requires=network-online.target
After=network-online.target

[Service]
User=nomad
Group=nomad
ExecStart=nomad agent \
  -config=/etc/nomad.d/ \
  ${NOMAD_OPTIONS}
KillMode=process
Restart=on-failure
RestartSec=1min

[Install]
WantedBy=multi-user.target
